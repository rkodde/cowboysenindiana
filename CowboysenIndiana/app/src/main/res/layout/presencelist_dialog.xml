<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <nl.cowboysenindiana.app.presencelist.SquareImageView
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/picture"
            android:layout_gravity="bottom">

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aanwezig"
                android:thumbTextPadding="25dp"
                android:id="@+id/switchButton"
                android:checked="false"
                android:layout_marginStart="66dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/switchStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/switchButton"
                android:layout_alignStart="@+id/switchButton"
                android:layout_marginTop="17dp" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/icon_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="left|top"
        android:contentDescription="close dialog"
        android:src="@drawable/ic_close_circle_black_48dp" />

</RelativeLayout>